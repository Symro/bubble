                <!-- Main content -->
                <section class="content">

                    <div class="box">
                                <div class="box-body table-responsive">
                                    <table id="example1" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>Photo</th>
                                                <th>ID</th>
                                                <th>Prénom</th>
                                                <th>Email</th>
                                                <th>Date création</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        <% _.each(users, function(user) { %>
                                            <tr>
                                                <td><img width="20px" height="20px" src="<%= user.image %>" alt="<%= user.firstname %>"/></td>
                                                <td><%= user.id %></td>
                                                <td><%= user.firstname %></td>
                                                <td><%= user.mail %></td>
                                                <td><%= moment(user.createdAt).format('DD/MM/YYYY HH:mm') %></td>
                                                <td>
                                                    <a class="btn btn-default btn-xs" href="/admin/user/show/<%= user.id %>">
                                                        <i class="fa fa-fw fa-user"></i> Voir
                                                    </a>
                                                    <a class="btn btn-default btn-xs" href="/admin/user/edit/<%= user.id %>">
                                                        <i class="fa fa-fw fa-edit"></i> Modifier
                                                    </a>
                                                    <a class="btn btn-default btn-xs" href="/admin/user/delete/<%= user.id %>">
                                                        <i class="fa fa-fw fa-trash-o"></i> Supprimer
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>Photo</th>
                                                <th>ID</th>
                                                <th>Prénom</th>
                                                <th>Email</th>
                                                <th>Date création</th>
                                                <th></th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div><!-- /.box-body -->
                            </div><!-- /.box -->

                         

